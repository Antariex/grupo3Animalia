<!-- AQUÍ VA EL FORMULARIO PARA AGREGAR PRODUCTO -->
<!DOCTYPE html>
<html lang="es">

<head>
  <!-- Metadatos: idiomas, adaptabilidad, estilos, tipografías, iconos y título -->
  <link href="/css/productCreate.css" rel="stylesheet">
  <title>Creación de producto - Animalia</title>
  <%- include ('../partials/head') %>
</head>

<body>
  <%- include('../partials/header.ejs') %>

  <main>
      <div class="formulario">

      <section class="section_container create_product-section">
        <article class="article_container product_article">
        
          <div>
            <h2 class="titulares">Formulario para creación de productos en stock</h2>
          </div>
          <ul class = "errores"></ul>
          
          <form action="/products/create/confirm" method="POST" enctype="multipart/form-data"
            class="form_creacion">
            <!-- Nombre del producto -->
            <br>
            <div>
              <label for="nombre">Nombre del producto:</label>
              <input type="text" placeholder="Complete este campo" name = "nombre" class="form_element" ></input>
              <br>
            </div>
            <br>
            <!-- Categoria del producto -->
            <div>
              <label for="category" placeholder="Seleccione una categoria">Categoria:</label>
              <select name="category" id="productCategory" class="form_element" >
                <option value="" selected disabled>Seleccione una categoria</option>
                <option value="1">Perros</option>
                <option value="2">Gatos</option>
                <option value="3">Aves</option>
                <option value="4">Roedores</option>
                <option value="5">Peces</option>
                <option value="6">Ofertas</option>
              </select>
            </div>
            <br>
  <!-- Subcategorías del producto -->
            <div>
              <label for="subcategory" placeholder="Seleccione una subcategoria">Subcategoria:</label>
              <select name="subcategory" id="productSubcategory" class="form_element" >
                <option value="" selected disabled>Seleccione una subcategoria</option>
                <option value="1">Alimentos</option>
                <option value="2">Farmacia</option>
                <option value="3">Cuuidados y belleza</option>
                <option value="4">Juguetes</option>
                <option value="5">Otros artículos</option>

              </select>
            </div>
            <br>
            <!-- Img del producto -->
            <div>
              <label for="thumbnail">Elige una imagen</label>
              <br>
              <input type="file" name="thumbnail" id="productImg" class="form_element"  accept="image/*"
                value="<%= locals.oldData? oldData.productImg : null%>"><br>
            </div>
            <br>
            <!-- Precio del producto -->
            <div>
              <label for="price">Precio:</label>
              <input type="text" name="price" id="productPrice" class="form_element" placeholder="$" ></input> <br>
            </div>
            <br>
            <!--Precio del producto con descuento-->
            <div>
              <label for="discount">Precio con descuento:</label>
              <input type="text" name="discount" id="Priced" class="descuento" placeholder="$"></input>
              <br>
            </div>
                        <!-- Stock del producto -->
                        <div>
                          <label for="stock">Stock:</label>
                          <input type="text" name="stock" id="stock" class="form_element" placeholder="cantidad" ></input> <br>
                        </div>
                        <br>
            <!-- Descripción del producto -->
            <div>
              <br>
              <br>
              <label for="productDescription">Escriba una descripción del producto</label>
              <br>
              <br>
              <textarea cols="65" rows="5" type="text" name="productDescription" class="form_element"
                placeholder="Escriba aqui los detalles del producto." ><%= locals.oldData? oldData.productDescription : null%></textarea>
            </div>
            <br>

            <!--<input type="submit" value="Crear">ESTE TENIAN LOS CHICOS-->
            <div class="buttons">
              <label action="/productCreate/%=product.id %>" method="GET" style="display: inline-flex">
                <button class="botonCrear" type="submit" value="crear">Crear producto</button>
              </label>
              <br>
              <label action="/products/" style="display: inline-flex">
                <button class="botonCancelar" >Cancelar</button>
              </label>
            </div>
          </form>
        </article>
      </section>
    </div>
  </main>

  <%- include('../partials/footer.ejs') %>

  <script src="/js/js_productCreate.js"> 

  </script>
</body>

</html>